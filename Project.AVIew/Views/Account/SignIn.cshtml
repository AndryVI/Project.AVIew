@{
    ViewData["Title"] = "Sign-In";
    Layout = "_LayoutSignInOut";
}

@model Project.AVIew.Models.LoginBindingModel
<form asp-controller="account" asp-action="signin" method="post">
    <img class="unselectable mb-4 unselectable" src="/sunSymbolYellowFor.svg" alt="" width="100" height="100">
    <h1 class="unselectable h3 mb-3 fw-normal">Для входа введите: пароль и логин</h1>

    <div class="form-floating">

        <input class="form-control" asp-for="Login" id="floatingInput" placeholder="nameV">
        <label for="floatingInput">Login</label>
        <span asp-validation-for="Login"></span>
    </div>
    <div class="form-floating">
        <input asp-for="Password" class="form-control" id="floatingPassword" placeholder="Password">
        <label for="floatingPassword">Password</label>
        <span asp-validation-for="Password"></span>
    </div>
    <br />

    <div class="list-group-item list-group-item-danger" asp-validation-summary="ModelOnly"></div>

    <button class="w-100 btn btn-lg btn-primary" type="submit">Войти</button>
    <div style="padding:20% 0 20% 0">
        <a asp-controller="account" asp-action="register" class="w-100 btn btn-lg btn-secondary">Зарегистрироваться</a>
    </div>
    <p class="mt-5 mb-3 text-muted">©2022</p>
</form>


<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.17.0/jquery.validate.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>

